---
import Layout from '@/layouts/layout.astro'
import Card from '@/components/generic/card.astro'
import type { MysticSkill, TierBonus } from '@/types/mystic-skill'

export async function getStaticPaths() {
  const skillFiles = import.meta.glob('@/wwm-data/mystic-skills/*.yaml', { eager: true })

  return Object.entries(skillFiles).map(([path, data]) => {
    const slug = path.split('/').pop()?.replace('.yaml', '')
    return { params: { slug }, props: { skill: { ...(data as MysticSkill), slug } } }
  })
}

const { skill } = Astro.props as { skill: MysticSkill }
---

<Layout>
  <Card border="top-bottom">
    <header class="skill-detail__header">
      <div class="header-main">
        <span class="category-badge">{skill.category}</span>
        <h1>{skill.name}</h1>
        <div class="tags">
          {skill.tags?.map((tag: string) => <span class="tag">{tag}</span>)}
        </div>
      </div>

      <div class="header-meta">
        <div class="meta-item">
          <span class="label">Vitality Cost</span>
          <span class="value">{skill.vitality_cost}</span>
        </div>
        <div class="meta-item">
          <span class="label">Cooldown</span>
          <span class="value">{skill.cooldown}</span>
        </div>
      </div>
    </header>

    <div class="skill-detail__content">
      <section class="description-section">
        <h2>Description</h2>
        <p set:html={skill.description.replace(/\n/g, '<br />')} />
      </section>

      {
        skill.tier_bonuses && (
          <section class="tier-bonuses">
            <h2>Tier Bonuses</h2>
            <div class="bonuses-grid">
              {skill.tier_bonuses.map((bonus: TierBonus) => (
                <div class="bonus-card">
                  <span class="tier">Tier {bonus.tier}</span>
                  <p>{bonus.effect}</p>
                </div>
              ))}
            </div>
          </section>
        )
      }
    </div>
  </Card>
</Layout>

<style lang="scss">
  @use '../../../scss/mixins' as *;

  .skill-detail__header {
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 2rem;
    @include border($bottom: true);
    padding-bottom: 0.5rem;

    .category-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;

      @include background(below-primary);
      @include text-color(primary);

      @include font-size(sm);
      @include font-sans-bold;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    h1 {
      @include text-color(default);
    }

    .tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      @include font-size(sm);
      @include text-color(muted);
      &::before {
        content: '#';
      }
    }
  }

  .header-meta {
    display: flex;
    gap: 3rem;

    .meta-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .label {
      font-size: 0.75rem;
      text-transform: uppercase;
      @include increase-letter-spacing(0.5);
      @include text-color(muted);
      @include font-sans-medium;
    }

    .value {
      @include font-size(base);
      @include font-sans-bold;
      @include text-color(primary);
    }
  }

  .skill-detail__content {
    h2 {
      margin-bottom: 0.75rem;
      @include text-color(default);
    }

    section:not(:last-child) {
      margin-bottom: 2rem;
    }
  }

  .description-section {
    p {
      @include text-color(muted);
      white-space: pre-wrap;
    }
  }

  .bonuses-grid {
    display: grid;
    gap: 1.5rem;
  }

  .bonus-card {
    @include background(surface-2);
    @include border($left: true, $color: primary, $width: thick);
    padding: 1rem 1.5rem;

    .tier {
      display: block;
      @include font-size(sm);
      @include font-sans-bold;
      @include text-color(primary);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
    }

    p {
      margin: 0;
      @include text-color(default);
    }
  }

  @media (max-width: 768px) {
    .skill-detail__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }

    .header-meta {
      width: 100%;
      justify-content: flex-start;
      gap: 3rem;
    }
  }
</style>
